<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CashBook" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#141e30</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="fontFamily">@font/lato</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorSecondary">#121212</item>
        <item name="android:textColorPrimary">#121212</item>
    </style>

    <style name="dartTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="colorPrimary">#000</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">@color/colorPrimaryAscent</item>
        <item name="colorOnPrimary">#131313</item>
        <item name="text_color">#ffff</item>
        <item name="button_color">#ffff</item>

    </style>
    <style name="Theme.CashBook3" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#121212</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:actionMenuTextColor">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorSecondary">#121212</item>
        <item name="android:textColorPrimary">#121212</item>
    </style>


    <!-- TOOLBAR THEME -->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Color of the title text in the Toolbar -->
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <!-- TOOLBAR TITLE THEME -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">italic</item>
    </style>



</resources>